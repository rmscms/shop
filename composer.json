{
    "name": "rmscms/shop",
    "description": "Complete Mini Shop System for Laravel with RMS Core",
    "type": "library",
    "license": "MIT",
    "keywords": ["laravel", "shop", "ecommerce", "rms", "minimart", "catalog", "cart", "checkout"],
    "authors": [
        {
            "name": "Sharif Ahrari",
            "email": "msharif.ahrari@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0|^12.0",
        "laravel/sanctum": "^4.2",
        "rmscms/core": "^1.3",
        "darkaonline/l5-swagger": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "RMS\\Shop\\": "src/",
            "RMS\\Shop\\Database\\Seeders\\": "database/seeders/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "RMS\\Shop\\ShopServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}

